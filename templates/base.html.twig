<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ 'nav.brand'|trans }}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_home') }}">{{ 'nav.brand'|trans }}</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('app_home') }}">{{ 'nav.home'|trans }}</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin') }}">Admin</a>
                            </li>
                        {% endif %}
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center" id="userNavbar">
                        {% if app.user %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-center" id="userNavbarMenu" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {% if app.user.profilePictureFilename %}
                                        <img
                                            src="{{ asset('uploads/avatars/' ~ app.user.profilePictureFilename) }}"
                                            class="rounded-circle"
                                            alt="Profile picture"
                                            style="width: 30px; height: 30px; object-fit: cover;"
                                        >
                                    {% else %}
                                        <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center mb-3"
                                            style="width: 30px; height: 30px; font-size: 32px;">
                                            {{ app.user.displayName|first|upper }}
                                        </div>
                                    {% endif %}
                                    &nbsp&nbsp{{ app.user.displayName }}
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="userNavbarMenu">
                                    <li><a class="dropdown-item" href="{{ path('app_profile') }}">{{ 'nav.profile'|trans }}</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">{{ 'nav.logout'|trans }}</a></li>
                                </ul>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">{{ 'nav.login'|trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}">{{ 'nav.register'|trans }}</a>
                            </li>
                        {% endif %}
                        <li class="nav-item me-2">
                            <div class="btn-group btn-group-sm" role="group" aria-label="{{ 'nav.language'|trans }}">
                                <a class="btn btn-outline-light {% if app.request.locale == 'en' %}active{% endif %}" href="{{ path('app_locale_switch', { locale: app.request.locale == 'en' ? 'fr' : 'en' }) }}">EN</a>
                                <a class="btn btn-outline-light {% if app.request.locale == 'fr' %}active{% endif %}" href="{{ path('app_locale_switch', { locale: app.request.locale == 'en' ? 'fr' : 'en' }) }}">FR</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <main class="container py-4">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
            {% block body %}{% endblock %}
        </main>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>
